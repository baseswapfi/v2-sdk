{
  "name": "@baseswapfi/v2-sdk",
  "version": "1.0.1",
  "license": "MIT",
  "description": "⚒️ An SDK for building applications on top of Baseswap V3",
  "author": "0xShoegazer",
  "module": "dist/sdk.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@baseswapfi/sdk-core": "^1.0.5",
    "@ethersproject/address": "^5.0.2",
    "@ethersproject/solidity": "^5.0.9",
    "jsbi": "^3.1.4",
    "tiny-invariant": "^1.1.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.6",
    "husky": "^8.0.3",
    "size-limit": "^8.2.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk.esm.js",
      "limit": "10 KB"
    }
  ]
}
